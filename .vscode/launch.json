{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/hardhat/internal/cli/cli.js",
      "args": [
        "test",
        "${file}"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "${workspaceFolder}/node_modules/**",
        "<node_internals>/**"
      ]
    },
  ]
}
